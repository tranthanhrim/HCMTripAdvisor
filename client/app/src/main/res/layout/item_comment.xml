<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    <ImageView
        android:id="@+id/ivAvatarComment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user_placeholder"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tvContentComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_14_grey"
            android:text="A wiki is a iki is a website that provides collaborative modification of its content and structure  website that provides collaborative modification of its content and structure directly from the web browser"
            android:layout_marginBottom="3dp"/>
        <!--android:maxLines="2"
            android:ellipsize="end"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvUsernameComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/LightBlack"
                android:textStyle="bold"
                android:text="Tran Thanh Rim"/>
            <TextView
                android:id="@+id/tvDateTimeComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/LightGray"
                android:text="20/04/1995 17:20"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
