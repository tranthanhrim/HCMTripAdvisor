<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="220dp"
    android:layout_marginRight="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/ivImageGroupedThing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:src="@drawable/placeholder_landscape"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNameGroupedThing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cu Chi Tunnels"
                style="@style/text_14_grey"/>

            <RatingBar
                android:id="@+id/rbRateGroupedThing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:rating="4.5"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvTypeGroupedThing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sights Landmarks"
                android:layout_marginTop="10dp"
                style="@style/text_12_light_grey"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
